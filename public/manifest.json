{
    "manifest_version": 3,
    "name": "Web Debugger",
    "version": "0.2.0",
    "description": "A browser extension that provides comprehensive debugging and design tools for web development.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "js/background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": ["storage", "activeTab", "tabs", "windows", "scripting"],
    "host_permissions": ["<all_urls>"]
}
